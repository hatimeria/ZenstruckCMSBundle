<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
        
    <services>
        

        <service id="zenstruck_content.path_form_type" class="Zenstruck\Bundle\ContentBundle\Form\Type\PathFormType">
            <tag name="form.type" alias="zenstruck_content" />
            <argument type="service" id="zenstruck_content.path_to_string_transformer" />
        </service>
        
        <service id="zenstruck_content.node_base_form_type" class="Zenstruck\Bundle\ContentBundle\Form\Type\NodeBaseFormType">
            <tag name="form.type" alias="zenstruck_content_node_base" />
        </service>

        <service id="zenstruck_content.path_to_string_transformer" class="Zenstruck\Bundle\ContentBundle\Form\DataTransformer\PathToStringTransformer" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
    
</container>
